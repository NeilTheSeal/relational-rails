<div class="form-wrapper">
  <div class="form-description">Add a new student to <%= @school.name %> using the form below:</div>
  <form id="create-school-form" action="/schools/<%= @school.id %>/students" method="POST">
    <div class="form-line-item">
      <label for="name">Name of student</label>
      <input type="text" id="name" name="name" />
    </div>

    <div class="form-line-item">
      <label for="age">Age</label>
      <input type="number" id="age" name="age" />
    </div>

    <div class="form-line-item boolean">
      <label for="currently_enrolled">Currently enrolled?</label>
      <%= hidden_field_tag "currently_enrolled", nil %>
      <input type="checkbox" id="currently_enrolled" name="currently_enrolled" />
    </div>

    <div class="form-line-item">
      <label for="account_balance">Student account balance</label>
      <input type="number" step=".01" id="account_balance" name="account_balance" />
    </div>

    <div class="form-line-submit">
      <input type="submit" value="add student" />
    </div>
  </form>
</div>