<div class="form-wrapper">
  <div class="form-description">Add a new student to <%= @school.name %> using the form below:</div>
  <form id="create-school-form" action="/schools/<%= @school.id %>" method="POST">
    <div class="form-line-item">
      <label for="student-name">Name of student</label>
      <input type="text" id="student-name" name="student-name" />
    </div>

    <div class="form-line-item">
      <label for="student-age">Age</label>
      <input type="number" id="student-age" name="student-age" />
    </div>

    <div class="form-line-item boolean">
      <label for="student-enrolled">Currently enrolled?</label>
      <input type="checkbox" id="student-enrolled" name="student-enrolled" />
    </div>

    <div class="form-line-item">
      <label for="student-balance">Student account balance</label>
      <input type="number" id="student-balance" name="student-balance" />
    </div>

    <div class="form-line-submit">
      <input type="submit" value="add student" />
    </div>
  </form>
</div>