<div class="form-wrapper">
  <div class="form-description">Create a new school using the form below:</div>
  <form id="create-school-form" action="/schools" method="POST">
    <div class="form-line-item">
      <label for="name">Name of school</label>
      <input type="text" id="name" name="name" />
    </div>

    <div class="form-line-item">
      <label for="location">Location</label>
      <input type="text" id="location" name="location" />
    </div>

    <div class="form-line-item boolean">
      <label for="abet_accredited">ABET accredited?</label>
      <input type="checkbox" id="abet_accredited" name="abet_accredited" />
    </div>

    <div class="form-line-item">
      <label for="student_capacity">Student capacity</label>
      <input type="number" id="student_capacity" name="student_capacity" />
    </div>

    <div class="form-line-submit">
      <input type="submit" value="create school" />
    </div>
  </form>
</div>