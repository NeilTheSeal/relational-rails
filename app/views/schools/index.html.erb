<div class="data-display">

  <div class="list-description two-column">
    <div class="list-description-text">list of schools in database</div>
    <div class="list-modify">
      <a id="create-school-link" href="/schools/new">add school</a>
    </div>
  </div>

  <div class="list">
    <% @schools.each do |school| %>
      <div class="list-item">
        <div class="name"><a href=<%= "/schools/#{school.id}" %>><%= school.name %></a></div>
        <div class="list-subitem">Location: <span class="value-color"><%= school.location %></span></div>
        <div class="list-subitem">ABET accredited: <span class=<%= school.abet_accredited ? "true" : "false" %>><%= school.abet_accredited ? "yes" : "no" %></span></div>
        <div class="list-subitem">Student capacity: <span class="value-color"><%= school.student_capacity %></span></div>
        <div class="list-subitem">Record created at: <span class="value-color"><%= school.created_at.strftime("%m/%d/%Y %T.%6N UTC") %></span></div>
        <a class="list-edit-btn" id="edit-<%= school.id %>" href="/schools/<%= school.id %>/edit">edit</a>
        <form id="delete-school-form" action="/schools/<%= school.id %>" method="POST">
          <%= hidden_field_tag(:authenticity_token, form_authenticity_token) %>
          <input type="hidden" name="_method" value="DELETE">
          <input id="delete-school-<%= school.id %>-link" class="list-delete-btn" type="submit" value="delete">
        </form>
      </div>
    <% end %>
  </div>
</div>