<div class="data-display">
  <div class="list-description">
    list of students in database
  </div>

  <div class="list">
    <% @students.each do |student| %>
      <div class="list-item">
        <div class="name"><a href=<%= "/students/#{student.id}" %>><%= student.name %></a></div>
        <div class="list-subitem">Age: <span class="value-color"><%= student.age %></span></div>
        <div class="list-subitem">Currently enrolled: <span class=<%= student.currently_enrolled ? "true" : "false" %>><%= student.currently_enrolled ? "yes" : "no" %></span></div>
        <div class="list-subitem">Account balance: <span class="value-color">$<%= sprintf('%.2f', student.account_balance) %></span></div>
        <a class="list-edit-btn" id="edit-<%= student.id %>" href="/students/<%= student.id %>/edit">edit</a>
        <form id="delete-student-<%= student.id %>-form" action="/students/<%= student.id %>" method="POST">
          <%= hidden_field_tag(:authenticity_token, form_authenticity_token) %>
          <input type="hidden" name="_method" value="DELETE">
          <input id="delete-student-<%= student.id %>-link" class="list-delete-btn" type="submit" value="delete">
        </form>
      </div>
    <% end %>
  </div>
</div>